{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <h1 class="mt-4" style="text-align: center">Modification du type d'offre</h1>
        <hr class="my-4">

        {{ form_start(form) }}

        <div class="form-group">
            {{ form_label(form.libelle) }}
            {{ form_widget(form.libelle) }}
            {{ form_errors(form.libelle) }}
        </div>

        <div class="form-error">
            {{ form_errors(form) }}
        </div>

        <div class="form-group">
            {{ form_row(form.submit) }}
        </div>

        {{ form_end(form) }}
    </div>
{% endblock %}