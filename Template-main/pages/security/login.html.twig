{% extends 'base.html.twig' %}

{% block title %}HSP -Connexion
{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="mt-4" style="text-align: center">Formulaire de connexion</h1>

        {%  for message in app.flashes('success') %}
            <div class="alert alert-success mt-4">
                {{ message }}
            </div>
        {% endfor %}

        {% if error %}
            <div class="alert alert-danger">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}

        <form action="{{ path('security.login') }}" method="post">
            <div class="form-group">
                <label for="username" class="form-label mt-4">Adresse email</label>
                <input type="email" class="form-control" id="username" name="_username" placeholder="exemple@hsp.fr" value="{{ last_username }}">
                <small id="emailHelp" class="form-text text-muted">Nous ne partagerons jamais votre e-mail avec autrui.</small>
            </div>
            <div class="form-group">
                <label for="password" class="form-label mt-4">Mot de passe</label>
                <input type="password" class="form-control" id="password" name="_password" placeholder="********" autocomplete="off">
            </div>
            <button type="submit" class="btn btn-primary mt-4">Se connecter</button>
            <a href="{{ path('forgotten_password') }}" class="btn btn-primary mt-4">Mot de passe oubli√© ?</a>
        </form>
    </div>

{% endblock %}
